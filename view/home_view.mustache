{{> header}}
<body>
<div class="container">
    <h2 class="home-title d-flex justify-content-center m-5">Pregunta2</h2>
    <div class="row">
        <div class="col-md-6">
            {{#user}}
                <div class="alert alert-info">
                    <p>Hola, bienvenido <strong>{{nombre_completo}}</strong>.</p>
                    <p>Su puntuacion mas alta es: {{puntuacion_masalta}}</p>
                </div>
            {{/user}}
        </div>
        <div class="col-md-6">
            <h2>Ranking</h2>
            <table class="table">
                <thead>
                <tr>
                    <th>Posicion</th>
                    <th>Usuario</th>
                    <th>Puntos más altos</th>
                </tr>
                </thead>
                <tbody>
                {{#rankingScore}}
                    <tr>
                        <td class="position">
                            {{position}}
                        </td>
                        <td>
                             <a href="javascript:void(0);" class="profile-link" data-nombre="{{nombre_completo}}" onclick="submitProfile(this)">
                                {{nombre_completo}}
                            </a>
                </a>
            </form>
                        </td>
                        <td>
                            {{puntuacion_masAlta}}
                        </td>
                    </tr>
                {{/rankingScore}}
                </tbody>
            </table>

               <div>
        <h2>¡Podés sugerirnos preguntas!</h2>
        <form action="/home/enviarPreguntaSugerida" method="post">
            <label for="pregunta">Pregunta:</label>
            <input type="text" id="pregunta" name="pregunta" required ><br>

            <label for="correcta">Respuesta Correcta:</label>
            <input type="text" id="correcta" name="correcta" required><br>

            <label for="incorrecta1">Respuesta Incorrecta 1:</label>
            <input type="text" id="incorrecta1" name="incorrecta1" required><br>

            <label for="incorrecta2">Respuesta Incorrecta 2:</label>
            <input type="text" id="incorrecta2" name="incorrecta2" required><br>

            <label for="incorrecta3">Respuesta Incorrecta 3:</label>
            <input type="text" id="incorrecta3" name="incorrecta3" required><br>

            <input type="submit" class="btn btn-primary mt-3" value="Enviar">
        </form>

    </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var positionColumns = document.querySelectorAll('.position');

        positionColumns.forEach(function(positionColumn) {
            var positionValue = positionColumn.innerText;

            switch (positionValue) {
                case '1':
                    positionColumn.innerHTML = '<img src="../public/assets/primerPuesto.png" alt="1">';
                    break;
                case '2':
                    positionColumn.innerHTML = '<img src="../public/assets/segundoPuesto.png" alt="2">';
                    break;
                case '3':
                    positionColumn.innerHTML = '<img src="../public/assets/tercerPuesto.png" alt="3">';
                    break;
            }
        });
    });


    function submitProfile(link) {
    var profileName = link.getAttribute('data-nombre');
    var form = document.createElement('form');
    form.action = '/profile/buscarPerfil';
    form.method = 'post';
    var input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'usuario';
    input.value = profileName;
    form.appendChild(input);
    document.body.appendChild(form);
    form.submit();
}


</script>
</body>