{{> header}}
<div class="container">

    <h2 class="home-title d-flex justify-content-center py-4 text-secondary">Pregunta2</h2>

    <div class="row">
        <div class="col-12">
            {{#user}}
            <div class="card text-white bg-secondary mb-3 w-auto">
                <div class="card-body text-center">
                    <h4 class="card-title">¡Bienvenido <strong>{{nombre_completo}}</strong>!</h4>
                    <p class="card-text">Su puntuación más alta es: {{puntuacion_masalta}}</p>
                </div>
            </div>
            {{/user}}
        </div>
    </div>

    <div class="row py-4">
        <div class="col-md-6">
            <h2 class="text-center py-3">Ranking</h2>
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Posición</th>
                        <th>Usuario</th>
                        <th>Puntos más altos</th>
                    </tr>
                </thead>
                <tbody>
                    {{#rankingScore}}
                    <tr>
                        <td class="position">
                            {{position}}
                        </td>
                        <td>
                            <a href="javascript:void(0);" style="text-decoration:none;"class="profile-link text-secondary" data-nombre="{{nombre_completo}}" onclick="submitProfile(this)">
                                {{nombre_completo}}
                            </a>
                        </td>
                        <td>
                            {{puntuacion_masAlta}}
                        </td>
                    </tr>
                    {{/rankingScore}}
                </tbody>
            </table>
        </div>

        <div class="col-md-6 py-3">
            <h2 class="text-center py-3">¡Podés sugerirnos preguntas!</h2>
            <form action="/home/enviarPreguntaSugerida" method="post">
                <div class="form-group">
                    <label for="pregunta">Pregunta:</label>
                    <input type="text" id="pregunta" name="pregunta" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="correcta">Respuesta Correcta:</label>
                    <input type="text" id="correcta" name "correcta" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="incorrecta1">Respuesta Incorrecta 1:</label>
                    <input type="text" id="incorrecta1" name="incorrecta1" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="incorrecta2">Respuesta Incorrecta 2:</label>
                    <input type="text" id="incorrecta2" name="incorrecta2" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="incorrecta3">Respuesta Incorrecta 3:</label>
                    <input type="text" id="incorrecta3" name="incorrecta3" class="form-control" required>
                </div>

                <input type="submit" class="btn btn-light mt-3 btn-outline-secondary px-20px" value="Enviar" style="padding: 8px 20px;">

            </form>
        </div>
    </div>

</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var positionColumns = document.querySelectorAll('.position');

        positionColumns.forEach(function(positionColumn) {
            var positionValue = positionColumn.innerText;

            switch (positionValue) {
                case '1':
                    positionColumn.innerHTML = '<img src="../public/assets/primerPuesto.png" alt="1">';
                    break;
                case '2':
                    positionColumn.innerHTML = '<img src="../public/assets/segundoPuesto.png" alt="2">';
                    break;
                case '3':
                    positionColumn.innerHTML = '<img src="../public/assets/tercerPuesto.png" alt="3">';
                    break;
            }
        });
    });


    function submitProfile(link) {
    var profileName = link.getAttribute('data-nombre');
    var form = document.createElement('form');
    form.action = '/profile/buscarPerfil';
    form.method = 'post';
    var input = document.createElement('input');
    input.type = 'hidden';
    input.name = 'usuario';
    input.value = profileName;
    form.appendChild(input);
    document.body.appendChild(form);
    form.submit();
}
</script>

{{> footer}} 
</body>

