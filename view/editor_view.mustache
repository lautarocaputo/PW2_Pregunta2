{{> header}}
<body>
<div class="container">
    <h2 class="home-title d-flex justify-content-center m-5">Panel de editor</h2>
    <div class="row">
        <div class="col-md-6">
            <h2>Preguntas Sugeridas</h2>
            <table class="table">
                <thead> <!-- Agrega una fila de encabezado -->
                    <tr>
                        <th> <!-- Agrega encabezados para cada columna -->
                            Pregunta
                        </th>
                        <th>
                            Respuesta correcta
                        </th>
                        <th>
                            Respuesta incorrecta 1
                        </th>
                        <th>
                            Respuesta incorrecta 2
                        </th>
                        <th>
                            Respuesta incorrecta 3
                        </th>
                    </tr>
                </thead>
                <tbody>
                {{#suggestedQuestion}}
                    <tr>
                        <td>
                            {{pregunta}}
                        </td>
                        <td>
                            {{respuesta_correcta}}
                        </td>
                        <td>
                            {{primera_respuesta_incorrecta}}
                        </td>
                        <td>
                            {{segunda_respuesta_incorrecta}}
                        </td>
                        <td>
                            {{tercera_respuesta_incorrecta}}
                        </td>
                    </tr>
                {{/suggestedQuestion}}
                </tbody>
            </table>
        </div>
    </div>

     <div class="row">
        <div class="col-md-6">
            <h2>Preguntas Reportadas</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Pregunta reportada
                        </th>
                    </tr>
                </thead>
                <tbody>
                {{#reportedQuestions}}
                    <tr>
                        <td>
                            {{Pregunta_texto}}
                        </td>
                    </tr>
                {{/reportedQuestions}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
