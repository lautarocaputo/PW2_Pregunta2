{{> header}}
<body>
<div class="container">
    <h2 class="home-title d-flex justify-content-center m-5">Panel de editor</h2>
    <div class="row">
        <div class="col-md-6">
            <h2>Preguntas Sugeridas</h2>
            <form action="/editor/aprobarODenegarPregunta" method="post">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Pregunta
                        </th>
                        <th>
                            Respuesta correcta
                        </th>
                        <th>
                            Respuesta incorrecta 1
                        </th>
                        <th>
                            Respuesta incorrecta 2
                        </th>
                        <th>
                            Respuesta incorrecta 3
                        </th>
                    </tr>
                </thead>
                <tbody>
                {{#suggestedQuestion}}
                    <tr>
                        <td>
                            <input type="checkbox" name="pregunta_id[]" value="{{id}}">
                        </td>
                        <td>
                            {{pregunta}}
                        </td>
                        <td>
                            {{respuesta_correcta}}
                        </td>
                        <td>
                            {{primera_respuesta_incorrecta}}
                        </td>
                        <td>
                            {{segunda_respuesta_incorrecta}}
                        </td>
                        <td>
                            {{tercera_respuesta_incorrecta}}
                        </td>
                    </tr>
                {{/suggestedQuestion}}
                </tbody>
            </table>
                <button type="submit" name="action" value="aprobar">Aprobar</button>
                <button type="submit" name="action" value="denegar">Denegar</button>
            </form>
        </div>
    </div>

     <div class="row">
        <div class="col-md-6">
            <h2>Preguntas Reportadas</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Pregunta reportada
                        </th>
                    </tr>
                </thead>
                <tbody>
                {{#reportedQuestions}}
                    <tr>
                        <td>
                            {{Pregunta_texto}}
                        </td>
                    </tr>
                {{/reportedQuestions}}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
