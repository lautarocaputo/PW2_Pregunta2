<div class="w3-container w3-center w3-padding-32">
    {{#error}}
        <div class="w3-red">
            {{error}}
        </div>
    {{/error}}

    <form class="w3-container w3-card-4 w3-white" method="post" action="{{action}}"
          style="max-width: 400px; margin: 0 auto; opacity: 0.9;">
        <label for="numero">Número:</label>

        <input class="w3-input" name="numero" type="hidden" id="numero" value="{{id}}">

        <input class="w3-input" name="numero" type="text" id="numero" value="{{numero}}">

        <label for="nombre">Nombre:</label>
        <input class="w3-input" name="nombre" type="text" id="nombre" value="{{nombre}}">

        <label for="tipo">Tipo:</label>
        <select class="w3-select" name="tipo" id="tipo">
            <option value="" disabled selected>Selecciona un tipo</option>
            <option value="electrico">Eléctrico</option>
            <option value="agua">Agua</option>
            <!-- Agrega más opciones de tipo según sea necesario -->
        </select>

        <button class="w3-button w3-blue  w3-margin" type="submit">{{submitText}}</button>
    </form>
</div>
